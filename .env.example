# Environment Template - Copy to .env and fill in your values
# DO NOT commit actual secrets to git!

# MongoDB Configuration
MONGODB_URI=your-mongodb-connection-string

# JWT Configuration  
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d

# Server Configuration
NODE_ENV=development
PORT=3003

# AI Control Center Defaults
DEFAULT_CONFIDENCE_THRESHOLD=0.80
DEFAULT_DESCRIPTION_LENGTH=standard
DEFAULT_RETENTION_DAYS=1

# Google OAuth - GET FROM GOOGLE CLOUD CONSOLE
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3003/auth/google/callback

# Frontend environment variables (for Vite)
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_GOOGLE_REDIRECT_URI=http://localhost:3003/auth/google/callback
VITE_API_URL=http://localhost:3003/api

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password